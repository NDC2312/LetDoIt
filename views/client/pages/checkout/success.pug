extends ../../layouts/default.pug
include ../../mixins/box-head.pug
include ../../mixins/alert.pug

block main 
 +alert-success(5000)
 +alert-error(5000)

 .container
  .row 
   .col-12 
    +box-head("Dat hang thanh cong")

  .row 
   .col-12 
    div(class="alert alert-success")  
     | Chuc mung ban da dat hang thanh cong! Chung toi se xu ly don hang trong thoi gian som nhat 

  if(order)   
   .row 
    .col-12 
     h4(class="mb-2") Thong tin ca nhan 
     table(class="table table-bordered")
      tbody 
       tr 
        td Ho ten
        td 
         b #{order.userInfo.fullName}
       tr 
        td SDT
        td 
         b #{order.userInfo.phone}
       tr 
        td Dia chi
        td 
         b #{order.userInfo.address}

   .row 
    .col-12 
     h4(class="mb-2") Thong tin don hang
      table(class="table table-bordered")
       thead 
        tr  
            th STT
            th Anh
            th Ten
            th Gia
            th So luong
            th Tong tien 
       tbody
        if(order.products.length > 0) 
         each item, index in order.products
            tr 
                td #{index + 1}
                td 
                 img(src=item.productInfo.thumbnail, alt=item.productInfo.title width="80px")
                td #{item.productInfo.title}
                td #{item.priceNew}$
                td #{item.quantity}
                td #{item.totalPrice}$
        else 
         tr 
            td(
                colspan="7"
                class="text-center"
            ) Gio hang trong     
                
     if(order.products.length > 0)
      h3(class="text-right") Tong don hang: #{order.totalPrice}$        
            
extends ../../layouts/default.pug
include ../../mixins/box-head.pug

block main 
 .container-my-3 
  include ../../partials/list-btn-users.pug
  
  .row 
   .col-12 
    +box-head("chat")

  .row 
   .col-12 
    .chat(my-id=user.id)
     .inner-body 
      each chat in chats
       div(class=(chat.user_id == user.id ? "inner-outing" : "inner-incoming"))
        if(chat.user_id != user.id)
         .inner-name #{chat.infoUser.fullName}
        if(chat.content) 
         .inner-content 
          | #{chat.content}
        if(chat.images) 
         .inner-images
          each image in chat.images
           img(src=image) 
      div(class="inner-list-typing")

     .inner-preview-images 
      div(
          class="custom-file-container" 
          data-upload-id="upload-images"
        ) 

     .inner-foot 
      form(
        class="inner-form"
        action=""
      )   
       input(
        type="text"
        placeholder="Nhap noi dung..."
        name="content"
       )
       label(class="btn btn-light mx-2 mb-0" 
       for="file-upload-with-preview-upload-images") anh
       span(class="button-icon btn btn-light mx-2") Icon
       button Gui
        
 div(class="tooltip" role="tooltip")
  emoji-picker

 block script 
    script(type="module" src="/js/chat.js") 
 